<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/main_drawer_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawer Activity" />

    <Button
        android:id="@+id/main_translucent_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translucent Activity" />

    <Button
        android:id="@+id/main_image_translucent_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Translucent Activity" />

    <Button
        android:id="@+id/main_trans_drawer_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transparent Drawer Activity" />

    <Button
        android:id="@+id/main_recycler_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycler activity" />

    <Button
        android:id="@+id/main_fragment_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fragment activity" />

</LinearLayout>